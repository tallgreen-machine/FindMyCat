# Backend environment configuration for FindMyCat (PostgreSQL)

# Server
NODE_ENV=production
PORT=3001
# PATH_PREFIX can be used if you host the app under a subpath (e.g. "/findmy").
# For root hosting leave it blank or unset.
PATH_PREFIX=

# CORS (comma-separated list for multiple origins)
CORS_ORIGIN=https://example.com

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=findmycat
DB_USER=postgres
DB_PASSWORD=change_me

# Auth
JWT_SECRET=please-change-me
JWT_EXPIRES_IN=30d
